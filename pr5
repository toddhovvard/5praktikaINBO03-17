#include <iostream>
 
using namespace std;
 

void calc(int n, char c, int m){
switch (c) 
       {
          case'+':cout<<n<<c<<m<<" = "<<(n+m)<<endl; break;
          case'-': cout<<n<<c<<m<<" = "<<(n-m)<<endl;break; 
          case'/': cout<<n<<c<<m<<" = "<<(n/m)<<endl; break; 
          case'*': cout<<n<<c<<m<<" = "<<(n*m)<<endl;break;
          default: cout<<"takogo bitb ne mozhet"<< endl;
         }
}
void calc(float n, char c, float m){
switch (c) 
       {
          case'+':cout<<n<<c<<m<<" = "<<(n+m)<<endl; break;
          case'-': cout<<n<<c<<m<<" = "<<(n-m)<<endl;break; 
          case'/': cout<<n<<c<<m<<" = "<<(n/m)<<endl; break; 
          case'*': cout<<n<<c<<m<<" = "<<(n*m)<<endl;break;
          default: cout<<"takogo bitb ne mozhet"<< endl;
         }
}
int main(){ 
setlocale(0,"");
    char a; 
    float c,b;
    cout<<"vvedite pervoe chislo: \n";
       cin>>c;
    cout<<"vvedite znak: \n";
       cin>>a;
    cout<<"vvedite vtoroe chislo:\n";
       cin>>b;
    calc(c, a, b);
 
    return 0;
}
